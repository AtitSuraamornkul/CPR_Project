digraph Robot_Petri_Net {
	rankdir=LR size="8,5"
	wandering [label=wandering shape=circle]
	moving_to_gold [label=moving_to_gold shape=circle]
	at_gold [label=at_gold shape=circle]
	waiting_for_partner [label=waiting_for_partner shape=circle]
	forming_pair [label=forming_pair shape=circle]
	carrying_gold [label=carrying_gold shape=circle]
	at_deposit [label=at_deposit shape=circle]
	find_gold [label=find_gold color=lightgray shape=box style=filled]
	reach_gold [label=reach_gold color=lightgray shape=box style=filled]
	propose_pickup [label=propose_pickup color=lightgray shape=box style=filled]
	partner_accepts [label=partner_accepts color=lightgray shape=box style=filled]
	form_pair [label=form_pair color=lightgray shape=box style=filled]
	reach_deposit [label=reach_deposit color=lightgray shape=box style=filled]
	deposit_gold [label=deposit_gold color=lightgray shape=box style=filled]
	lose_partner [label=lose_partner color=lightgray shape=box style=filled]
	timeout [label=timeout color=lightgray shape=box style=filled]
	wandering -> find_gold
	find_gold -> moving_to_gold
	moving_to_gold -> reach_gold
	reach_gold -> at_gold
	at_gold -> propose_pickup
	propose_pickup -> waiting_for_partner
	waiting_for_partner -> partner_accepts
	partner_accepts -> forming_pair
	forming_pair -> form_pair
	form_pair -> carrying_gold
	carrying_gold -> reach_deposit
	reach_deposit -> at_deposit
	at_deposit -> deposit_gold
	deposit_gold -> wandering
	waiting_for_partner -> timeout
	timeout -> wandering
	forming_pair -> lose_partner
	lose_partner -> at_gold
}
